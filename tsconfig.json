{

    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2020"
        ],
        "removeComments": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "lib",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "generated/**/*.ts",
         "src/app.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*",
        "lib/**/*"
    ]
}

